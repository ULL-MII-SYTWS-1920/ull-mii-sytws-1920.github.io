{
  "compilerOptions": {
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "target": "es6",
    "module": "es6",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declarationDir": "./dist"
  },
  "include": ["src/**/*"]
}
